@model EnvironmentProject.Models.EnvironmentViewModel

<div id="divEnvironmentChanges">
    <h4>Environment Connection here...</h4>
    @using (Html.BeginForm("EnvironmentConnection", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "PasswordChangeForm" }))
    {
        

        @*@Html.AntiForgeryToken()*@
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger", id = "validation_summary"})
        <div class="form-group">

            @Html.LabelFor(m => m.HostName, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.HostName, new {id = "hostName", @class = "form-control"})
                
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DatabaseName, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.DatabaseName, new {id = "databaseName", @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserID, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.UserID, new { id = "userID", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger", id = "validation_confirmpassword"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-6">
                <input type="submit" value="Connection" class="btn-clear" id="btnConnection"/>
            </div>
        </div>
    }

</div>
